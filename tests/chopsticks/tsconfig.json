{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "build",
    "baseUrl": "./",
    "moduleResolution": "nodenext",
    "importHelpers": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noEmit": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "ts-node": {
        "esm": true
    }
}